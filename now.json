{
  "version": 2,
  "name": "wiki.chronica",
  "alias": ["wiki.chronica.xyz", "www.wiki.chronica.xyz"],
  "builds": [
		{ "src": "*.html", "use": "@now/html-minifier" },
		{ "src": "styles/*.css", "use": "@now/html-minifier" },
		{ "src": "fonts/*.ttf", "use": "@now/static" },
		{ "src": "media/*.ico", "use": "@now/static" },
		{ "src": "media/*.jpg", "use": "@now/static" },
		{ "src": "media/*.svg", "use": "@now/static" },
		{ "src": "media/*.ico", "use": "@now/static" },
		{ "src": "media/*.png", "use": "@now/optipng" },
		{ "src": "data/*.js", "use": "@now/static" },
		{ "src": "scripts/*.js", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/(.+)(png|svg|css|ico|jpg|ttf|js)", "dest": "/$1$2" },
    { "src": "/", "dest": "/index.html"},
    { "src": "/index.html", "dest": "/index.html"},
    { "src": "^/.+", "dest": "/404.html"}
  ],
  "regions": [ "all" ]
}
